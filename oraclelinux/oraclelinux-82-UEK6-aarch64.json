{
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "<up><wait><tab><wait> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ol8-ks.cfg<enter><wait>"
      ],
      "boot_wait": "40s",
      "disk_interface": "virtio",
      "disk_size": "100000M",
      "format": "qcow2",
      "headless": true,
      "host_port_max": 2229,
      "host_port_min": 2222,
      "http_directory": "docroot",
      "http_port_max": 10089,
      "http_port_min": 10082,
      "iso_checksum": "sha256:7024d4df2304e44c3930e2e75eb5af7c58f1e6cecef3ccecfc76d512abc24961",
      "iso_url": "http://10.76.100.4/ISOs/oracle/OL-8.2-UEK6-aarch64-V996908-01.iso",
      "net_device": "virtio-net",
      "output_directory": "oraclelinux-r8u2-UEK6-aarch64",
      "qemuargs": [
        [
          "-m",
          "2048M"
        ],
        [
          "-smp",
          "cpus=1,maxcpus=16,cores=4"
        ]
      ],
      "shutdown_command": "shutdown -P now",
      "ssh_password": "oraclelinux",
      "ssh_port": 22,
      "ssh_timeout": "1200s",
      "ssh_username": "root",
      "type": "qemu",
      "vm_name": "oraclelinux-r8u2-UEK6-aarch64"
    }
  ],
  "provisioners": [
    {
      "inline": [
        "yum install -y qemu-guest-agent",
        "mkdir /etc/cloud",
        "touch /etc/cloud/cloud-init.disabled",
        "yum install -y cloud-init",
        "rm /etc/cloud/cloud-init.disabled",
        "yum clean all"
      ],
      "pause_before": "5s",
      "type": "shell"
    }
  ]
}

